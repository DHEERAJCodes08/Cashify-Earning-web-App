<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- CSS Link -->
    <link rel="stylesheet" href="./assets/css/adminpannel.css">
    <!-- Icon Links -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    
</head>

<body>
    <div class="container">
        <div class="top-bar">
            <div class="top-bar-content">
                <div class="logo">
                    <div class="logo_text">
                        <h2>Cashify</h2>
                        <p>Play EarnðŸŒŸ</p>
                    </div>
                </div>
                <div class="top-bar-icons">
                    <a href=""><i class='bx bx-credit-card'></i></a>
                    <div class="profile-dropdown">
                        <i class='bx bxs-user-circle'></i>
                        <div class="dropdown-content">
                            <a href="/dashboard">Profile</a>
                            <a href="/withdraw">Withdraw</a>
                            <a href="#">Support</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="sidenav">
            <br>
            <br>

            <div class="search_bar">
                <form action="#">
                    <i class='bx bx-search'></i>
                    <input type="text" placeholder="Search...">
                </form>
            </div>

            <div class="icon_items">
                <ul>
                    <li class="navActive active ">
                        <i class='bx bxs-dashboard'></i>
                        <a class="links" href="/admin">Dashboard</a>
                    </li>

                    <li class="navActive ">
                        <i class='bx bx-money-withdraw'></i>
                        <a class="links" href="/adminwithdraw">Withdrawl</a>
                    </li>
                    <li class="navActive ">
                        <i class='bx bxs-bar-chart-alt-2'></i>
                        <a class="links" href="/adminpromotepaynment">PPaynment</a>
                    </li>
                    <li class="navActive">
                        <i class='bx bxs-shopping-bag'></i>
                        <a class="links" href="#">Products</a>
                    </li>
                    <li class="navActive">
                        <i class='bx bxs-bell'></i>
                        <a class="links" href="#">Notification</a>
                    </li>
                    <li class="navActive">
                        <i class='bx bxs-group'></i>
                        <a class="links" href="#">Group</a>
                    </li>
                    <li class="navActive">
                        <i class='bx bxs-user-rectangle'></i>
                        <a class="links" href="#">Portfolio</a>
                    </li>
                    <li class="navActive">
                        <i class='bx bxs-user-circle'></i>
                        <a class="links" href="#">Profile</a>
                    </li>
                    <li class="navActive">
                        <i class='bx bxs-cog'></i>
                        <a class="links" href="#">Setting</a>
                    </li>
                    <li class="navActive">
                        <i class='bx bx-log-in'></i>
                        <a class="links" href="#">Logout</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content area -->
        <div class="main-content">
            <div class="Content active " id="Dashboard">
                <div class="default">
                    <!-- chart 1 -->
                    <div class="main_dashboard_section">
                        <div class="section1_header">
                            <div class="Growth">Growth</div>
                            <img src="assets/dashimages/growth.png" width="25px">
                            <span class="tooltip_view">
                                <img width="17" src="assets/dashimages/question.png" alt="">
                                <div class="tooltip_message"> Admision Growth in Year </div>
                            </span>
                        </div>
                        <div class="section1_chart">
                            <div id="chart"></div>
                        </div>
                    </div>

                    <!-- chart 2 -->
                    <div class="main_dashboard_section">
                        <div class="section1_header">
                            <div class="Growth">Accadamic</div>
                            <img src="assets/dashimages/growth.png" width="25px">
                            <span class="tooltip_view">
                                <img width="17" src="assets/dashimages/question.png" alt="">
                                <div class="tooltip_message"> Accadamic Score </div>
                            </span>
                        </div>
                        <div class="section1_chart">
                            <div id="chart2"></div>
                        </div>
                    </div>


                    <!--chart 3 -->
                    <div class="main_dashboard_section">
                        <div class="section1_header">
                            <div class="Growth">Fees</div>
                            <img src="assets/dashimages/growth.png" width="25px">
                            <span class="tooltip_view">
                                <img width="17" src="assets/dashimages/question.png" alt="">
                                <div class="tooltip_message">Fees Collection </div>
                            </span>
                        </div>
                        <div class="section1_chart">
                            <div id="chart3"></div>
                        </div>
                    </div>

                    <!-- Chart 4  -->

                    <div class="main_dashboard_section">
                        <div class="row mt-4 mb-5">
                            <div class="col-md-20" id="chart4">
                                <div class="row sparkboxes">
                                    <div class="col-md-6">
                                        <div class="box box1 shadow">
                                            <div id="spark1"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="box box2 shadow">
                                            <div id="spark2"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row sparkboxes mt-3">
                                    <div class="col-md-6">
                                        <div class="box box3 shadow">
                                            <div id="spark3"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="box box4 shadow">
                                            <div id="spark4"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom navigation bar for mobile -->
    <div class="bottom-nav">
        <ul>
            <li class="navActive">
                <a class="sendlink" id="active" href="/dashboard">
                    <i class='bx bxs-dashboard' id="active"></i>
                    Dashboard
                </a>
            </li>

            <li class="navActive">
                <a class="sendlink" href="/dashboard">
                    <i class='bx bxs-hot'></i>
                    Trending
                </a>
            </li>
            <li class="navActive">
                <a class="sendlink" href="/dashboard">
                    <i class='bx bxs-bar-chart-alt-2'></i>
                    Activity
                </a>
            </li>
            <li class="navActive">
                <a class="sendlink" href="/dashboard">
                    <i class='bx bxs-user-circle'></i>
                    Profile
                </a>
            </li>
        </ul>
    </div>

    <script src="./assets/js/admindashboard.js"></script>
</body>

</html>